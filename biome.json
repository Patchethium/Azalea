{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "ignore": ["src/binding.ts"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "noForEach": "off"
      },
      "style": {
        "useImportType": "off",
        "noNonNullAssertion": "off"
      }
    },
    "ignore": ["src/binding.ts"]
  },
  "organizeImports": {
    "enabled": true
  }
}
